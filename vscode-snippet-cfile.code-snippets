		  "#define __${TM_FILENAME_BASE/(.*)/${1:/upcase}/}_H",
		  "$1",
		  "#ifdef __cplusplus",
		  "extern \"C\" {",
		  "#endif",
		  "",
		  "/* Includes ------------------------------------------------------------------*/",
